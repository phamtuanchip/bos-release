                { label: "Chuy·ªÉn tr·∫°ng th√°i", name: "TotalDownloads", fixed: false, width: 'auto'},
                { label: "Qu√° h·∫°n trong tu·∫ßn", name: "TotalPages", fixed: false, width: 'auto'},
                { label: "Qu√° h·∫°n t·ª´ tr∆∞·ªõc", name: "BeforeTotalPages", fixed: false, width: 'auto'},
